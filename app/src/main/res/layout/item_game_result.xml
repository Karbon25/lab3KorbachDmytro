<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Додайте інші елементи інтерфейсу за потребою -->

    <TextView
        android:id="@+id/item_result_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гравець:" />

    <TextView
        android:id="@+id/item_result_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Час гри:" />
    <TextView
        android:id="@+id/item_result_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рахунок:" />
</LinearLayout>